<div class='jumbotron'>
  <p id="notice"><%= notice %></p>

  <h3><font color="purple">Gift Lists:</font></h3>

<br>

  <table class="table table-hover table-striped table-condensed">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= link_to list.name, list_path(list) %></td>
          <% if current_user.id == 1 %>
              <td><%= link_to 'Edit', edit_list_path(list) %></td>
              <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class='jumbotron'
  <%= render 'form', list: @list %>
</div>
